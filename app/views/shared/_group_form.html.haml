= form_for(@group) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_field :name,   placeholder: 'Name of group'
    = f.text_field :year,   placeholder: 'Year of swap'
    = f.text_field :limit,  placeholder: 'Limit for swap'
  = f.submit 'Create', class: [:btn, 'btn-large', 'btn-primary']
