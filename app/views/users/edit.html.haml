%h1 Update your profile

.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email

      %p Only enter your password if you want to change it
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation, 'Confirm your password'
      = f.password_field :password_confirmation

      = f.submit 'Update profile', class: [:btn, 'btn-large', 'btn-primary']


    = gravatar_for @user
    = link_to('change', 'http://gravatar.com/emails')
